<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_aluno_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/item_aluno_nome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Josue Lopes" />

    <TextView
        android:id="@+id/item_aluno_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/item_aluno_telefone"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/item_aluno_nome"
        app:layout_constraintTop_toBottomOf="@id/item_aluno_nome" />

</androidx.constraintlayout.widget.ConstraintLayout>